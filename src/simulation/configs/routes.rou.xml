<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">
    
    <!-- Vehicle Types -->
    <vType id="car" accel="2.6" decel="4.5" sigma="0.5" length="4.5" maxSpeed="15" guiShape="passenger" color="1,1,0"/>
    <vType id="bus" accel="1.2" decel="4.0" sigma="0.3" length="12.0" maxSpeed="12" guiShape="bus" color="0,1,0"/>
    <vType id="motorcycle" accel="3.5" decel="7.0" sigma="0.8" length="2.2" maxSpeed="18" guiShape="motorcycle" color="1,0,1"/>
    <vType id="truck" accel="1.0" decel="4.0" sigma="0.3" length="8.0" maxSpeed="10" guiShape="truck" color="0,0,1"/>
    
    <!-- Routes -->
    <route id="north_to_south" edges="north_in south_out"/>
    <route id="south_to_north" edges="south_in north_out"/>
    <route id="east_to_west" edges="east_in west_out"/>
    <route id="west_to_east" edges="west_in east_out"/>
    
    <!-- Traffic Flows -->
    <flow id="flow1" type="car" route="north_to_south" begin="0" end="1800" vehsPerHour="240"/>
    <flow id="flow2" type="car" route="south_to_north" begin="0" end="1800" vehsPerHour="180"/>
    <flow id="flow3" type="car" route="east_to_west" begin="0" end="1800" vehsPerHour="300"/>
    <flow id="flow4" type="car" route="west_to_east" begin="0" end="1800" vehsPerHour="200"/>
    
    <!-- Add some buses and motorcycles -->
    <flow id="bus_flow" type="bus" route="north_to_south" begin="0" end="1800" vehsPerHour="30"/>
    <flow id="bike_flow" type="motorcycle" route="east_to_west" begin="0" end="1800" vehsPerHour="120"/>
    
</routes>
