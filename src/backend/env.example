# Smart Traffic Management System - Environment Configuration
# Copy this file to .env and update the values

# Application Environment
ENVIRONMENT=development
APP_NAME=Smart Traffic Management System

# API Configuration
API_TITLE=Smart Traffic Management API
API_DESCRIPTION=AI-based traffic signal optimization system for SIH 2025
API_VERSION=1.0.0
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true
API_RELOAD=true

# CORS Configuration
API_CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]
API_CORS_CREDENTIALS=true

# Rate Limiting
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_WINDOW=60

# Database Configuration
DB_URL=sqlite:///./traffic_management.db
DB_ECHO=false
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_CONNECTIONS=20
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5
REDIS_RETRY_ON_TIMEOUT=true
REDIS_HEALTH_CHECK_INTERVAL=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_PATH=logs/traffic_api.log
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=true

# Security Configuration
SECURITY_SECRET_KEY=your-secret-key-change-in-production
SECURITY_ALGORITHM=HS256
SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=30
SECURITY_REFRESH_TOKEN_EXPIRE_DAYS=7

# Feature Flags
ENABLE_REDIS=true
ENABLE_DATABASE=true
ENABLE_METRICS=true
ENABLE_TRACING=false

# Computer Vision Configuration
VIDEO_PATH=data/videos/
YOLO_MODEL=yolov8n.pt
CONFIDENCE_THRESHOLD=0.8

# ML Engine Configuration
OPTIMIZATION_INTERVAL=10
ALGORITHM_TYPE=q_learning

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3000

# External Services
WEATHER_API_KEY=your-weather-api-key
MAPS_API_KEY=your-maps-api-key

# Development/Testing
PYTEST_CURRENT_TEST=
COVERAGE_RC=.coveragerc